<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManagement.RegisterPage"
             Title="Sign up">

    <VerticalStackLayout Margin="0, 30, 0 ,0">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="Title"/>

        <StackLayout Margin="20, 30">
            <Entry Placeholder="Username" Margin="0, 10"/>

            <Entry Placeholder="Password" Margin="0, 10"/>

            <Button Text="Sign up" BackgroundColor="DarkGray" HorizontalOptions="Center" WidthRequest="200" Margin="0, 20"/>
        </StackLayout>

        
    </VerticalStackLayout>
</ContentPage>
